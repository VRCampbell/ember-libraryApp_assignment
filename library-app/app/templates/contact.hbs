<h1>Contacts Page</h1>

<div class="jumbotron text-center">
  <h2>Send Email</h2>

  <br/><br/>

  <div class="form-horizontal form-group form-group-lg">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
      {{input type="email" value=emailAddress class="form-control" placeholder="Please type your email address." autofocus="autofocus"}}
      <br/>
      {{textarea type="message" value=message class="form-control" placeholder="Please type your message here."}}
    </div>
    <div class="col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
      <br/><br/><br/><br/><br/><br/><br/><br/>
      <button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}} {{action 'sendMessage'}}>Send Message</button>
    </div>

    <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
    {{#if responseMessage}}
      <div class="alert alert-success">{{responseMessage}}</div>
    {{/if}}

    <br/><br/>
  </div> <!-- ENDOF: form-horizontal-->
</div><!-- ENDOF: jumbotron-->

{{outlet}}
